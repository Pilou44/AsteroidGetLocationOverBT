<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.freak.fidji.locationoverbt.StateActivity">

    <ImageView
        android:id="@+id/mobile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/phone" />

    <TextView
        android:id="@+id/text_mobile1"
        android:text="@string/no_information"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_alignTop="@+id/mobile1"
        android:layout_alignBottom="@+id/mobile1"
        android:layout_toRightOf="@+id/mobile1"
        android:paddingTop="20dp" />

    <ImageView
        android:id="@+id/mobile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/phone" />

    <TextView
        android:id="@+id/text_mobile2"
        android:text="@string/no_information"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_alignTop="@+id/mobile2"
        android:layout_alignBottom="@+id/mobile2"
        android:layout_toRightOf="@+id/mobile2"
        android:paddingBottom="20dp" />


</RelativeLayout>
